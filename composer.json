{
    "name": "mcenirm/web-api-extension",
    "type": "behat-extension",
    "description": "Web API extension for Behat",
    "keywords": ["api", "test"],
    "homepage": "http://extensions.behat.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Christophe Coevoet",
            "email": "stof@notk.org"
        },
        {
            "name": "Community contributors",
            "homepage": "https://github.com/Behat/WebApiExtension/graphs/contributors"
        }
    ],

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mcenirm/jsonselect-php"
        }
    ],

    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0",
        "guzzlehttp/guzzle": "4.*",
        "phpunit/phpunit": "~4.0",
        "mcenirm/jsonselect-php": "dev-feature/as_composer_package"
    },

    "require-dev": {
        "symfony/process": "~2.1",
        "silex/silex": "~1"
    },

    "autoload": {
        "psr-4": {
            "Behat\\WebApiExtension\\": "src/"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
